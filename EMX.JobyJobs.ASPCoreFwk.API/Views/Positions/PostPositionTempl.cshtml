@model EMX.JobyJobs.BL.ServiceObjects.Position

@{
  ViewData["Title"] = "PostPosition";
}

<script>
    function selectJobField(value) {
        $(jobFieldHiddenField).val(value);
    }
    function selectJobCity(value) {
        $(jobCityHiddenField).val(value);
    }
    function selectJobProfession(value) {
        $(jobProfessionHiddenField).val(value);
    }

    function getSelectedRadioOption(elementName) {
        var radios = document.getElementsByName(elementName);

        for (var i = 0, length = radios.length; i < length; i++) {
            if (radios[i].checked) {

                // Store the value for the selected radio
                // You can maybe redirected on another page and pass this variable
                return radios[i].value;
                break;
            }
        }
        return null;

    }

    function prepareFormData() {
        var jobTitle = $("#jobTitle").html();
        var jobAddress = $("#jobLocationAddress").html();
        var jobPostalCode = $("#jobLocationPostalCode").html();
        var salaryMin = $("#salaryMin").html();
        var jobSummary = $("#jobSummary").html();
        var keyResponsibilities = $("#keyResponsibilities").html();
        var minimumRequirements = $("#minimumRequirements").html();

        $(jobTitleHiddenField).val(jobTitle);
        $(jobAddressHiddenField).val(jobAddress);
        $(jobPostalCodeHiddenField).val(jobPostalCode);
        $(salaryMinHiddenField).val(salaryMin);
        $(jobSummaryHiddenField).val(jobSummary);
        $(keyResponsibilitiesHiddenField).val(keyResponsibilities);
        $(minimumRequirementsHiddenField).val(minimumRequirements);
    }
    function submitForm() {
        prepareFormData();
        document.theForm.submit();
    }
</script>


